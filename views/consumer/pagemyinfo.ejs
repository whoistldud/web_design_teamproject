    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- index.js는 회원가입이 안 되어 있는 곳 = 홈화면이 보이긴 하나,
      무엇이든 클릭하면 회원가입으로 넘어가도록!-->
    <% include ./../layout/loginheader.ejs %>
    <% include ./../layout/category.ejs %>

    <div>
      <div class="row" style="min-height: 550px;">
        <div class="col-2" >
          <!-- 안에 들어가는 내용의 height이 500px 미만이면 style="height: 500px" 이렇게 설정-->
          <% include ./../layout/mypgmenubar.ejs %>
        </div>
        <div class="col-10" >
          <!-- 내용 들어갈 자리 !!! -->
          <div class="row">
            <h6 id="navtext">HOME > 마이페이지 > 내 정보</h6>
          </div>
          <div class="row">
            <div class="col-2 col-lg-3"></div>
            <div class="col-8 col-lg-6">
              <table width="600px" height="300px" style="margin-top: 30px;">
                <th></th> <!-- 1열-->
                <th></th> <!-- 2열-->
                <tr> <!-- 첫번째 줄 시작-->
                  <td>이름</td>
                  <td style="font-weight: bold;"><%= info[0].name %></td>
                </tr>
                <tr>
                  <td>회원유형</td>
                  <td style="font-weight: bold;"><%= info[0].role %></td>
                </tr>
                <tr>
                  <td>전화번호</td>
                  <td style="font-weight: bold;"><%= info[0].phonenum %></td>
                </tr>
                <tr>
                  <td>이메일</td>
                  <td style="font-weight: bold;"><%= info[0].email %></td>
                </tr>
                <tr>
                  <td></td>
                  <td><button class="btn" id="editbtn" onclick="editInfo()" style="background-color: #DFE7F6;">수정하기</button></td>
                </tr>
              </table>

            </div>
            <div class="col-2 col-lg-3"></div>
          </div>
        </div>
      </div>
    </div>
  
    <script>
      // 수정하기 버튼 onclick 이벤트 함수
      function editInfo() {
        location.href="/consumer/mypage/editinfo";
      }
    </script>
  
  </body>
