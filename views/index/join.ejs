  <body></body>
    <% include ./../layout/header.ejs %>

    <div class="container">
      <!-- Row1. 회원가입 제목 -->
      <div class="row">
        <div class="col"></div>
        <div class="col-6">
          <h3 class="text-center fw-bold mt-4 mb-4">회원가입👤</h3>
        </div>
        <div class="col"></div>
      </div>

      <div class="row ">
        <div class="col"></div>
        <div class="col-6">
          
          <div class="input-form-backgroud row">
            <div class="input-form col-md-12 mx-auto">
              
              <form class="validation-form"  id = "join" action="join" method = "post" >
                <div class="row">
  
                  <div class="col-md-6 mb-3">
                      <label for="id">👤 아이디</label>
                      <input type="text" class="form-control" id="id" name="id" placeholder="아이디를 입력하세요." required>
                      <div class="invalid-feedback">
                        아이디를 입력해주세요.
                      </div>
                      <div id="idOK" class="form-text text-success mt-2"></div>
                      <div id="idERR" class="form-text text-danger mt-2"></div>
                  </div>
  
                  <div class="col-md-6 mb-3">
                      <button type="button" id = "VerifyId" class="btn btn-outline-dark mt-4" style="background-color : #f0d8d8;">중복 확인</button>
                      

                  </div>
  
                  <div class="col-md-6 mb-3">
                    <label for="password">🔑 비밀번호</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="비밀번호를 입력하세요." value="" required>
                    <div class="invalid-feedback">
                      비밀번호를 입력해주세요.
                    </div>

                    <div id="passwordOK" class="form-text text-success mt-2"></div>
                    <div id="passwordERR" class="form-text text-danger mt-2"></div>
                  </div>
                  <div class="col-md-6 mb-2">
                    <label for="passwordConfirm">비밀번호 확인</label>
                    <input type="password" class="form-control" id="passwordConfirm" placeholder="" value="" required>
                    <div class="invalid-feedback">
                      비밀번호를 한번 더 입력해주세요
                    </div>
                  </div>
                
  
                <div class="mb-3">
                  <label for="name">👤 이름(매장명)</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="이름을 입력하세요.(판매자는 매장명을 입력해주세요)" required>
                  <div class="invalid-feedback">
                    이름을 입력해주세요.
                  </div>
                </div>
      
                <div class=" mb-3">
                  <label for="email">📧 이메일</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                  <div class="invalid-feedback">
                    이메일을 입력해주세요.
                  </div>
                </div>
  
                <div class="mb-3">
                  <label for="phoneNum">📞 전화번호</label>
                  <input type="text" class="form-control" id="phoneNum" name="phoneNum" placeholder="01012341234" required>
                  <div class="invalid-feedback">
                    전화번호를 입력해주세요.
                  </div>
                </div>
                
                <div class="mb-3">
                  <label for="birthday">🎂 생일</label>
                  <input type="date" class="form-control" id="birthday" name="birthday" placeholder="" required>
                  <div class="invalid-feedback">
                  생일을 입력해주세요.
                  </div>
                </div>
              
  
                <div class="row mb-3">
                  <div class="col-md-9 mb-3 ">
                    <label for="role">🔎 가입 사유</label>
                    <select class="form-select form-select w-50" id="role" name="role">
                      <option value="consumer">구매</option>
                      <option value="seller">판매</option>
                    </select>
                    <div class="invalid-feedback">
                      가입사유를 선택해주세요.
                    </div>
                  </div>
                  <div class="col-md-3 mb-3">
                    <button class="btn btn-block mt-4 mx-2"  disabled="disabled" id="joinbtn" type="submit"
                            style="color: #ffffff; background-color : #191B5E; width:150px;">가입 완료</button>
                  </div>
                  <div class="text mt-2">✿ 이미 계정이 있다면?  <a href="/login">로그인하기</a></div>
                </div>

                </div>
              </form>
            </div>
            </div>
          </div>
          <div class="col"></div>
        </div>
      </div>
      
       
      </div>
      <br/>
        
  </body>
  <% include ./../layout/footer.ejs %>
</html>

<script>

    var checkId = false;
    var checkPassword = false;

    $("#id").on("propertychange change keyup paste input", function() {
        checkId = false;
        $("#idHelp").text("아이디 중복 여부를 확인하세요");
        document.getElementById('joinbtn').disabled = true;
    });

    document.getElementById("VerifyId").onclick = function () {
        const id = document.getElementById("id").value;
        const url = '/verifyId/'+id;
        $.get(url).done(function(e){
            if(e==false){
                $("#idOK").text("이 아이디는 사용가능합니다.");
                $("#idERR").text("");
                checkId = true;        
                if(checkId && checkPassword){
                    document.getElementById('joinbtn').disabled = false;
                }else document.getElementById('joinbtn').disabled = true;
            }else{
                $("#idERR").text("중복되는 아이디가 있습니다.");
                $("#idOK").text("");
                checkId = false;

            }
        })
        .fail(function(error){
	        console.log('failed!');
        });
    };

    $("#passwordConfirm").on("propertychange change keyup paste input", function() {
        const password = document.getElementById("password").value;
        const passwordCheck = document.getElementById("passwordConfirm").value;
        if(password==passwordCheck){
            checkPassword = true;
            $("#passwordOK").text("비밀번호와 일치합니다.");
            $("#passwordERR").text("");
        }else{
            checkPassword = false;
            $("#passwordERR").text("비밀번호와 일치하지 않습니다.");
            $("#passwordOK").text("");
        }    
        if(checkId && checkPassword){
            document.getElementById('joinbtn').disabled = false;
        }else document.getElementById('joinbtn').disabled = true;
    });

    $("#password").on("propertychange change keyup paste input", function() {
        const password = document.getElementById("password").value;
        const passwordCheck = document.getElementById("passwordConfirm").value;
        if(password==passwordCheck){
            checkPassword = true;
            $("#passwordHelp").text("비밀번호와 일치합니다.");
        }else{
            checkPassword = false;
            $("#passwordHelp").text("비밀번호와 일치하지 않습니다.");
        } 
        if(checkId && checkPassword){
            document.getElementById('joinbtn').disabled = false;
        }else document.getElementById('joinbtn').disabled = true;   
    });

</script>