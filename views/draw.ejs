      //console.log(data.id, "ì—ì„œ ë³´ë‚¸ ë©”ì‹œì§€ : ", data.message);
    });

  const sendMessage = () => {
      let data = {roomId : '<%=id%>', sender : '<%=senderId%>', msg : document.getElementById("textMessage").value};
      if(data.msg != ""){
